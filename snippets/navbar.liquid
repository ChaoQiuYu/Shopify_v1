<script>
  let items = document.querySelectorAll('#navbarSupportedContent .nav-item.dropdown');
  console.log(items);
  items.forEach((item) => {
    item.addEventListener('mouseover', () => {
      item.setAttribute('open', true); // 显示下拉框
      item.querySelector('.dropdown-menu').style.display = 'block'; // 确保下拉框显示
    });

    item.addEventListener('mouseleave', () => {
      item.removeAttribute('open'); // 隐藏下拉框
      item.querySelector('.dropdown-menu').style.display = 'none'; // 确保下拉框隐藏
    });

    item.querySelector('.dropdown-menu').addEventListener('mouseleave', () => {
